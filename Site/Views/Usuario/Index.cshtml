@using Dominio
@model List<Dominio.Entidades.Usuario>
@{
    ViewData["Title"] = "Usuarios";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Usuario" asp-action="Incluir"> Incluir </a>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <br />
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <br />
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />
    <h1 class="display-4"> Usuarios </h1>

    <table class="display" style="width:100%"  id="GridUsuario">
        <thead>
            <tr>
                <th scope="col">Código</th>
                <th scope="col">Nome</th>
                <th scope="col">Login</th>
                <th scope="col">Senha</th>
                <th scope="col">Email</th>
                <th scope="col">DataCadastro</th>
                <th scope="col">DataAlteracao</th>
                <th scope="col">Perfil</th>
                <th scope="col">   </th>
            </tr>
        </thead>

        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row"> @item.Id </th>
                        <th scope="row"> @item.Nome </th>
                        <th scope="row"> @item.Login </th>
                        <th scope="row"> @item.Senha </th>
                        <th scope="row"> @item.Email </th>
                        <th scope="row"> @item.DataCadastro </th>
                        <th scope="row"> @item.DataAlteracao </th>
                        <th scope="row"> @item.Perfil </th>
                        <td>
                            <a class="btn btn-primary"   asp-controller="Usuario" asp-action="Alterar" asp-route-id="@item.Id">Alterar</a> |
                            <a class="btn btn-secondary" asp-controller="Usuario" asp-action="Consultar" asp-route-id="@item.Id">Detalhes</a> |
                            <a class="btn btn-danger"    asp-controller="Usuario" asp-action="Apagar" asp-route-id="@item.Id">Apagar</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="odd"> <td valign="top" colspan="5"> Nenhum registro encontrado </td> </tr>
            }
        </tbody>
    </table>
</div>
